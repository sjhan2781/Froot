<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_food"
    android:layout_width="156dp"
    android:layout_height="192dp"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="7dp"
    android:layout_marginStart="7dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="1dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="85dp"
            android:text="이미지 준비중" />

        <ImageView
            android:id="@+id/imageView_food"
            android:layout_width="156dp"
            android:layout_height="142dp"
            android:background="@drawable/ic_no_image" />

        <TextView
            android:id="@+id/textView_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView_food"
            android:layout_centerHorizontal="true"
            android:text="음식명"
            android:textColor="@color/textColor_black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/textView_food_name"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3.5dp"
            android:textColor="#54000000"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageView_food_enable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_cant_eat"
            android:visibility="visible" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
