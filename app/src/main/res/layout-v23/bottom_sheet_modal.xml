<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:layout_marginTop="11dp"
        android:text="서비스 가능 지역"
        android:textAlignment="center"
        android:textColor="@color/textColor_black"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView"
        app:srcCompat="@drawable/horizontal_line"
        android:contentDescription="@string/horizontal_line"/>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="21dp"
        android:choiceMode="singleChoice"
        android:gravity="center"
        android:horizontalSpacing="16dp"
        android:numColumns="2"
        android:scrollIndicators="none"
        android:scrollbars="none"
        android:verticalSpacing="15dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/gridView"
        android:background="@drawable/button_recognize_selector"
        android:text="선택 완료"
        android:textColor="@color/register_button_text_selector"
        android:textSize="19sp" />

</RelativeLayout>

