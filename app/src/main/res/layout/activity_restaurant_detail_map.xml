<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hansangjin.froot.Activities.RestaurantDetailMapActivity"
    android:clipChildren="false">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar" />

    <fragment
        android:id="@+id/map_fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"/>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView_restaurant"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:clipChildren="false"
        android:foregroundGravity="center"
        app:cardCornerRadius="1dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false">

            <ImageView
                android:id="@+id/imageView_restaurant"
                android:layout_width="82dp"
                android:layout_height="78dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="11dp"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/textView_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-16dp"
                android:elevation="3dp"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView_restaurant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="11dp"
                android:layout_toEndOf="@+id/imageView_restaurant"
                android:gravity="center"
                android:textColor="@color/textColor_black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/textView_restaurant_name"
                android:layout_alignTop="@+id/textView_restaurant_name"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/textView_restaurant_name"
                android:gravity="center"
                android:text="@string/text_divider"
                android:textColor="#12000000" />

            <TextView
                android:id="@+id/textView_restaurant_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/textView_restaurant_name"
                android:layout_alignTop="@+id/textView_restaurant_name"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/textView5"
                android:gravity="center"
                android:textColor="#54000000"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/textView_review_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView_restaurant_name"
                android:layout_below="@+id/textView_restaurant_name"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@+id/imageView_restaurant"
                android:ellipsize="none"
                android:singleLine="false"
                android:textColor="#54000000"
                android:textSize="13sp" />

            <!--<RatingBar-->
            <!--android:id="@+id/ratingBar_restaurant"-->
            <!--style="@style/Base.Widget.AppCompat.RatingBar.Small"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/textView_restaurant_name"-->
            <!--android:layout_toEndOf="@+id/imageView_restaurant"-->
            <!--android:isIndicator="true" />-->

            <!--<TextView-->
            <!--android:id="@+id/textView_rating"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignBottom="@+id/ratingBar_restaurant"-->
            <!--android:layout_marginStart="10dp"-->
            <!--android:layout_toEndOf="@id/ratingBar_restaurant"-->
            <!--android:textSize="12sp" />-->

            <!--<TextView-->
            <!--android:id="@+id/textView_review_count"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignBottom="@+id/ratingBar_restaurant"-->
            <!--android:layout_marginStart="10dp"-->
            <!--android:layout_toEndOf="@id/textView_rating"-->
            <!--android:textColor="@color/black"-->
            <!--android:textSize="12sp" />-->

            <TextView
                android:id="@+id/textView_restaurant_phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView_restaurant"
                android:layout_alignStart="@+id/textView_restaurant_name"
                android:layout_toEndOf="@id/imageView_restaurant"
                android:textColor="@color/colorAccent"
                android:textSize="13sp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>