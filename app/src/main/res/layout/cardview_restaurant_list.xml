<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_restaurant_list"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/imageView_restaurant"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_restaurant_default"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_restaurant"
        android:layout_marginTop="-35dp"
        android:layout_centerHorizontal="true"
        card:cardElevation="4dp"
        card:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:id="@+id/textView_restaurant_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="9.5dp"
                android:layout_marginBottom="9.5dp"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="@color/textColor_black" />

            <TextView
                android:id="@+id/textView_divider"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/textView_restaurant_name"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="#12000000"
                android:gravity="center"
                android:text="@string/text_divider" />

            <TextView
                android:id="@+id/textView_restaurant_category"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/textView_divider"
                android:textColor="#54000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView_recommended_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="12dp"
                android:textSize="14sp"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/textView_recommended_count"
                android:gravity="center"
                android:text="@string/text_recommended_food"
                android:textColor="#54000000"
                android:textSize="14sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>


