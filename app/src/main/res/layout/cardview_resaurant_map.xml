<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/logoColor"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imageView_restaurant"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/textView_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_distance"
            android:layout_toEndOf="@+id/imageView_restaurant"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_restaurant_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@+id/textView_restaurant_name"
            android:layout_alignBottom="@+id/textView_restaurant_name"
            android:layout_below="@+id/textView_distance"
            android:textColor="@color/black"
            android:textSize="12sp"/>

        <RatingBar
            android:id="@+id/ratingBar_restaurant"
            style="@style/Base.Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_restaurant_name"
            android:layout_toEndOf="@+id/imageView_restaurant"
            android:isIndicator="true" />

        <TextView
            android:id="@+id/textView_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ratingBar_restaurant"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/ratingBar_restaurant"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView_review_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ratingBar_restaurant"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/textView_rating"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView_restaurant_phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ratingBar_restaurant"
            android:layout_toEndOf="@id/imageView_restaurant"
            android:textColor="@color/black"
            android:textSize="20sp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
